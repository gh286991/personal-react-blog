{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@frontend/*": ["frontend/*"],
      "@server/*": ["server/*"],
      "@shared/*": ["shared/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "types": ["node", "vite/client"],
    "sourceMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["frontend/**/*.ts", "frontend/**/*.tsx", "server/**/*.ts", "server/**/*.tsx", "shared/**/*.ts"]
}
