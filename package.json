{
  "name": "personal-react-blog",
  "version": "1.0.0",
  "description": "tomslab.dev｜日編驛 (The Build Station) - Minimal React SSR blog powered by Markdown posts.",
  "main": "dist/server/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node scripts/run-server.mjs dev",
    "clean": "node scripts/clean-dist.mjs",
    "build:client": "bunx vite build",
    "build:ssr": "bunx vite build --ssr src/server/entry-server.tsx",
    "build:server": "bunx tsc --project tsconfig.server.json",
    "copy:static": "node scripts/copy-static.mjs",
    "build": "npm run clean && npm run build:client && npm run build:ssr && npm run build:server && npm run copy:static",
    "start": "cross-env NODE_ENV=production CONTENT_BASE=dist node scripts/run-server.mjs start"
  },
  "keywords": [
    "react",
    "ssr",
    "markdown",
    "blog"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^5.1.0",
    "gray-matter": "^4.0.3",
    "marked": "^16.4.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/sanitize-html": "^2.16.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.49",
    "sass": "^1.83.0",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^5.4.11"
  }
}
