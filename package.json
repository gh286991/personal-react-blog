{
  "name": "personal-react-blog",
  "version": "1.0.0",
  "description": "tomslab.dev｜湯編驛 (Tom's lab) - Minimal React SSR blog powered by Markdown posts.",
  "private": true,
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter server dev",
    "clean": "node scripts/clean-dist.mjs",
    "build:client": "pnpm --filter frontend build",
    "build:ssr": "pnpm --filter frontend build:ssr",
    "build:server": "pnpm --filter server build",
    "copy:static": "node scripts/copy-static.mjs",
    "build": "pnpm run clean && pnpm run build:client && pnpm run build:ssr && pnpm run build:server && pnpm run copy:static",
    "start": "pnpm --filter server start"
  },
  "keywords": [
    "react",
    "ssr",
    "markdown",
    "blog"
  ],
  "author": "",
  "license": "MIT",
  "workspaces": [
    "frontend",
    "server"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "tailwindcss": "^3.4.16"
  }
}
